{
    "name": "weather-app",
    "version": "1.0.0",
    "description": "Simple desktop storm informer based on 'burze.dzis.net' API.",
    "main": "main.js",
    "scripts": {
        "test": "standard --fix",
        "prod": "webpack --mode production --config webpack.build.config.js && electron --noDevServer .",
        "start": "lint:fix && webpack-dev-server --hot --host 0.0.0.0 --config=./webpack.dev.config.js --mode development",
        "build": "webpack --config webpack.build.config.js --mode production",
        "package": "npm run build && electron-builder ",
        "build:langs": "babel-node src/services/translator/index.js",
        "lint": "eslint --ext .jsx,.js ./src",
        "lint:fix": "eslint --fix --ext .jsx,.js ./src"
    },
    "author": "Mi≈Çosz Szekiel <xannax>",
    "license": "MIT",
    "build": {
        "appId": "com.github.xanaxx.weather-app",
        "directories": {
            "buildResources": "dist",
            "output": "builds"
        },
        "win": {
            "target": "portable"
        }
    },
    "standard": {
        "parser": "babel-eslint"
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.8",
        "@fortawesome/free-solid-svg-icons": "^5.5.0",
        "@fortawesome/react-fontawesome": "^0.1.3",
        "babel-plugin-react-intl": "^3.0.1",
        "electron-debug": "^2.0.0",
        "emotion": "^9.2.12",
        "glob": "^7.1.3",
        "mkdirp": "^0.5.1",
        "prop-types": "^15.6.2",
        "react": "^16.6.0",
        "react-dom": "^16.6.0",
        "react-emotion": "^9.2.12",
        "react-intl": "^2.7.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.1.5",
        "@babel/core": "^7.1.5",
        "@babel/preset-env": "^7.1.5",
        "@babel/preset-react": "^7.0.0",
        "babel-eslint": "^10.0.1",
        "babel-loader": "^8.0.4",
        "babel-plugin-emotion": "^9.2.11",
        "css-loader": "^1.0.1",
        "electron": "^3.0.7",
        "electron-builder": "^20.31.2",
        "electron-devtools-installer": "^2.2.4",
        "eslint": "^5.9.0",
        "eslint-plugin-emotion": "^9.2.6",
        "file-loader": "^2.0.0",
        "html-webpack-plugin": "^3.2.0",
        "mini-css-extract-plugin": "^0.4.4",
        "standard": "^12.0.1",
        "style-loader": "^0.23.1",
        "webpack": "^4.24.0",
        "webpack-cli": "^3.1.2",
        "webpack-dev-server": "^3.1.10"
    }
}
